
- extends 'base.html'
- block content
  .col-xs-12.col-sm-12.col-md-12.col-lg-12{style:"margin: 5mm; ", align:"center"}
    - if form.errors
      %span.errorlist Your username and password didn't match. Please try again.
    - if next
      - if user.is_authenticated
        %span.errorlist Your account doesn't have access to this page. To proceed, please login with an account that has access.
      - else
        %span.errorlist Please login to see this page.
    
  .col-xs-12.col-sm-12.col-md-12.col-lg-12{style:"margin: 5mm; ", align:"center"}
    %h4{style:"font-size: 1.1em;"} ログイン
    %form{method: "POST", action:"{% url 'sign_in' %}"}
      - csrf_token
        %table
          %tr
            %td #{form.username.label_tag}
            %td #{form.username}
          %tr
            %td #{form.password.label_tag}
            %td #{form.password}
        %input{type:"submit", value:"login"}
        %input{type:"hidden", name:"next", value:"#{next}"}
